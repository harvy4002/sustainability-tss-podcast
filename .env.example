# Google Cloud credentials
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google Cloud Storage (for Cloud Run deployment)
GCS_BUCKET_NAME=your-storage-bucket
USE_CLOUD_STORAGE=true

# RSS feed source
RSS_FEED_URL=https://www.instapaper.com/rss/YOUR_USER_ID/YOUR_TOKEN

# Podcast metadata
PODCAST_TITLE=My Instapaper Articles
PODCAST_DESCRIPTION=Articles from my Instapaper account read aloud
PODCAST_AUTHOR=Your Name
PODCAST_SITE_URL=https://example.com/podcast
PODCAST_IMAGE_URL=https://example.com/podcast/image.jpg

# Output configuration
AUDIO_OUTPUT_DIR=./audio
FEED_OUTPUT_PATH=./feed.xml
CACHE_FILE_PATH=./processed-articles.json
